<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form action='/landmarks/<%= @landmark.id%>' method='post'>
<input type='hidden' name='_method' value='patch'/> 
<label>Landmark Name:</label>
<input type='text' name='name' value="<%= @landmark.name %>"/>
<label>Landmark Year Completed:</label>
<input type='text' name='year_completed' value="<%= @landmark.year_completed %>"/>
<input type='submit' value='Edit Landmark'/>
</form>
